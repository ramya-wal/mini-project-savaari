<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramya.savaari.ui.activities.ViewAllVehiclesActivity">
    <TextView
        android:id="@+id/activity_view_all_vehicles_tvNoVehicleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/activity_welcome_view"
        android:text="@string/no_vehicle" />
    <android.support.v7.widget.RecyclerView
        android:padding="5dp"
        android:id="@+id/activity_view_all_vehicles_rcvVehicleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/activity_welcome_llWelcome"
        android:layout_marginTop="50dp" />

</RelativeLayout>
