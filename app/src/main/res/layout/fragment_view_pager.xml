<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_view_pager_vpVehicleImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.rd.PageIndicatorView
        android:id="@+id/fragment_view_pager_pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:piv_animationType="drop"
        android:padding="20dp"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="#FFFFFF"
        app:piv_unselectedColor="@color/grey"
        app:piv_viewPager="@id/fragment_view_pager_vpVehicleImages" />


</RelativeLayout>