<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ramya.savaari.ui.activities.ViewVehicleActivity">

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/activity_view_vehicle_fragViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_view_vehicle_tvBrandModel"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Brand Model"
        android:padding="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_view_vehicle_tvColour"
        android:text="Colour"
        android:paddingLeft="20dp"
        android:layout_weight="1"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_view_vehicle_tvYear"
        android:layout_weight="1"
        android:text="Year"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/activity_view_vehicle_tvPrice"
        android:layout_weight="1"
        android:text="Price"
        android:layout_height="wrap_content"
        android:padding="10dp" />
    </LinearLayout>


</LinearLayout>
