<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_iv_vehicleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_tvVehicleModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/list_item_menuOption"
                android:text="@string/vehicle_model"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_tvVehicleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_tvVehicleModel"
                android:padding="2dp"
                android:text="@string/year"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/list_item_menuOption"
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>